{
  "name": "typedoc-plugin-markdown",
  "version": "4.0.0-next.31",
  "description": "A plugin for TypeDoc that enables TypeScript API documentation to be generated in Markdown.",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "eslint ./src --ext .ts",
    "prepublishOnly": "npm run lint && npm run build",
    "prebuild": "rm -rf dist && npm run task:code",
    "build": "tsc",
    "pretest": "ts-node ./test/__scripts__/prepare.ts",
    "test": "npm-run-all test:*",
    "test:lint-md": "node test/__scripts__/lint.md.mjs",
    "test:lint-mdx": "node test/__scripts__/lint.mdx.mjs",
    "test:jest": "jest",
    "build-and-run": "npm run build && npm run pretest",
    "build-and-test": "npm run build && npm run test",
    "api-docs": "npm run build && typedoc --options ./typedoc.api.js --out ./docs/api",
    "task:docs": "node scripts/docs/docs.mjs",
    "task:code": "ts-node scripts/code"
  },
  "author": "Thomas Grey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tgreyuk/typedoc-plugin-markdown/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tgreyuk/typedoc-plugin-markdown.git",
    "directory": "packages/typedoc-plugin-markdown"
  },
  "homepage": "https://github.com/tgreyuk/typedoc-plugin-markdown/tree/master/packages/typedoc-plugin-markdown",
  "keywords": [
    "markdown",
    "typescript",
    "documentation",
    "api",
    "typedoc-plugin",
    "typedoc"
  ],
  "peerDependencies": {
    "typedoc": "0.25.x"
  }
}
