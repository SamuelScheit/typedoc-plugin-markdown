{
  "name": "typedoc-plugin-remark",
  "version": "0.0.1-next.0",
  "description": "A plugin for TypeDoc that enables additional markdown transformations with remark.",
  "main": "./dist/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "eslint ./src --ext .ts",
    "prepublishOnly": "npm run lint && npm run build",
    "prebuild": "rm -rf dist && prebuild-options",
    "build": "tsc",
    "postbuild": "copyfiles --up 1 ./src/**/*.cjs ./dist/",
    "build-and-test": "npm run build && npm run test",
    "pretest": "ts-node ./test/__scripts__/prepare.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tgreyuk/typedoc-plugin-markdown.git",
    "directory": "packages/typedoc-plugin-remark"
  },
  "homepage": "https://github.com/tgreyuk/typedoc-plugin-markdown/tree/master/packages/typedoc-plugin-remark",
  "author": "Thomas Grey",
  "license": "MIT",
  "dependencies": {
    "remark": "^15.0.1",
    "to-vfile": "^8.0.0"
  },
  "peerDependencies": {
    "typedoc-plugin-markdown": ">=4.0.0-next.39"
  },
  "keywords": [
    "typedoc",
    "remark"
  ]
}
